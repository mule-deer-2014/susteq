  .col-lg-12
    %h1.pull-left Pumps
  / /.col-lg-12
%hr
=image_tag "map.png", :style => "width: 100%; margin-bottom: 50px;"
/ /.row
.row
  .col-lg-12
    .table-responsive
      %table#dataTables-example.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th City
            %th State
            %th Description
        %tbody
          %tr.odd.gradeX
            %td No More Thirst
            %td Nakuru
            %td.center
            %td.center Anything here
          %tr.even.gradeC
            %td
              %a{:href => "pumps/waterpoints.html"}
                Fresh & Clear
            %td Nairobi
            %td.center
            %td.center Anything here
    / /.table-responsive
  / /.col-lg-12
