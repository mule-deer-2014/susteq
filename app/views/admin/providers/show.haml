.row
	.col-lg-12
		%h1.page-header
			= @provider.name

		%h3 General information
.row
	.col-lg-6
		%table
			%tr
				%th Name
				%td 
					= @provider.name
			%tr
				%th Address
				%td 
					= @provider.address
			%tr
				%th Country
				%td
					= @provider.country
	.col-lg-6
		%table
			%tr
				%th Duns number
				%td
					= @provider.duns_number
			%tr
				%th Created at
				%td
					= @provider.created_at
			%tr
				%th Updated at
				%td
					= @provider.updated_at

%h3 Profit by month
=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"

%h3 Total water served
=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"

%h3.pull-left Water points
= link_to '<button class="btn btn-primary btn-xs pull-right mt20" type="button"><i class="fa fa-plus fa-fw"></i>New WPS</button>'.html_safe
.row
	.col-lg-12
		.table-responsive
			%table.table.table-striped.table-bordered.table-hover.mt20
				%thead
					%tr
						%th Name
						%th City
						%th State
						%th Description
				%tbody
					%tr.odd.gradeX
						%td Green Valley Inc.
						%td Nakuru
						%td.center
						%td.center Anything here
					%tr.even.gradeC
						%td 
							%a{:href => "wsps/show.html"}
								Malibu Inc.
						%td Nairobi
						%td.center
						%td.center Anything here
		/ /.table-responsive
	/ /.col-lg-12

