= form_for [:admin, @provider] do |f|
	- if flash.any?
		%h4{:style => "font-weight:bold;color:red;"}
			Provider not saved:
		%ul
			- flash[:error_messages].each do |msg|
				%li{:style => "font-weight:bold;color:red;"}= msg
	.form-group
		= f.label :name
		%br
		= f.text_field :name, class: "form-control"
	.form-group
		= f.label :address
		%br
		= f.text_field :address, class: "form-control"
	.form-group
		= f.label :country
		%br
		= f.text_field :country, class: "form-control"
	.form-group
		= f.label :duns_number
		%br
		= f.text_field :duns_number, class: "form-control"
	.actions
		= f.submit class: "btn btn-default"
