.row
	.col-lg-12
		%h1.page-header Fresh & Clear
		%h3 General information
.row
	.col-lg-6
		%table
			%tr
				%th Name
				%td Fresh & Clear
			%tr
				%th Phone
				%td (432) 735-1423
			%tr
				%th Email
				%td freshandclear@gmail.com
			%tr
				%th Edit
				%td= link_to "edit kiosk number #{@kiosk.id}", edit_admin_kiosk_path(@kiosk), :method => :get
			%tr
				%th Delete
				%td= link_to "delete kiosk number #{@kiosk.id}", admin_kiosk_path(@kiosk) ,:method => :delete
			%tr
				%th Water Service Provider
				%td  Kiosk number is #{@kiosk.id} is owned by #{link_to (Provider.find(@kiosk.provider_id)).name, admin_provider_path(Provider.find(@kiosk.provider_id))}

%h3 Profit by month
=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"
.row
	.col-lg-12
		.table-responsive
			%table#dataTables-example.table.table-basic.table-bordered.table-hover
				%thead
					%tr
						%th Month
						%th Profit
				%tbody
					%tr.odd.gradeX
						%td May
						%td $ 23.835
					%tr.even.gradeC
						%td June
						%td $ 32.142
		/ /.table-responsive
	/ /.col-lg-12
