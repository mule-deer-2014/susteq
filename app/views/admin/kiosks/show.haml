.col-lg-12
	%h1.page-header
		= @kiosk.name
		%small - Kiosk
.col-lg-12
	%h3.pull-left General information
	%p.pull-right
		= link_to '<i class="fa fa-pencil fa-fw"></i>'.html_safe, edit_admin_kiosk_path(@kiosk)
		= link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, admin_kiosk_path(@kiosk), method: :delete, data: { confirm: 'Are you sure?' }
.col-lg-6
	%table.gen-info
		%col.col-lg-5
		%tr
			%th Kiosk Name
			%td= @kiosk.name
		%tr
			%th Location ID
			%td= @kiosk.location_id
		%tr
			%th Provider
			%td= link_to "#{@kiosk.provider.name}", admin_provider_path(id: @kiosk.provider_id)
		%tr
			%th Status Code
			%td= @kiosk.status_code
.col-lg-6
	%table.gen-info
		%col.col-lg-5		
		%tr
			%th Longitude
			%td= @kiosk.longitude
		%tr
			%th Latitude
			%td= @kiosk.latitude
		%tr
			%th Created at
			%td= @kiosk.created_at
		%tr
			%th Updated at
			%td= @kiosk.updated_at

.col-lg-12
	%h3 Credits Bought and Sold by Month
	=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"
	.table-responsive
		%table#dataTables-example.table.table-basic.table-bordered.table-hover
			%thead
				%tr
					%th Month
					%th Credits Sold
					%th Credits Bought
			%tbody
				%tr.odd.gradeX
					%td May
					%td 23.835
					%td 90.234
				%tr.even.gradeC
					%td June
					%td 32.142
					%td 123.023
:javascript
	$(document).ready(function() {
			$('#dataTables-example').dataTable();
	});
