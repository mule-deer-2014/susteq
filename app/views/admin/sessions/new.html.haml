.container
	.row
		.col-md-4.col-md-offset-4
			.login-panel.panel.panel-default
				.panel-heading
					%h3.panel-title Please Sign In
				.panel-body
					.div.text-center
						=image_tag "logo.jpg", :style => "width: 200px; margin-bottom: 35px; margin-top: 15px;"
					= form_for(:session, url: admin_sessions_path) do |f|
						%fieldset
							.form-group
								= f.text_field :email, :class => "form-control", placeholder: "Email", :autofocus => "", :type => "email"
							.form-group
								= f.password_field :password, :class => "form-control", placeholder: 'Password', :type => "password", :value => ""
							.checkbox
								%label
									%input{:name => "remember", :type => "checkbox", :value => "Remember Me"}
										Remember Me
							= f.submit "Sign in", class: "btn btn-large btn-primary"

