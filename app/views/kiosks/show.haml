.row
.col-lg-12
	%h1.page-header
		= @kiosk.name
		%small - Kiosk
.col-lg-12
	%h3.pull-left General information
.col-lg-6
	%table.gen-info
		%col.col-lg-5
		%col.col-lg-5
		%tr
			%th Kiosk Name
			%td= @kiosk.name
		%tr
			%th Location ID
			%td= @kiosk.location_id
.col-lg-6
	%table.gen-info
		%col.col-lg-5
		%col.col-lg-5
		%tr
			%th Longitude
			%td= @kiosk.longitude
		%tr
			%th Latitude
			%td= @kiosk.latitude
.col-lg-12
	%h3 Credits Bought and Sold by Month
	=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"
.col-lg-12
	%h3 Total transactions per month
	.table-responsive
		%table#dataTables-example.table.table-basic.table-bordered.table-hover.mt20
			%thead
				%tr
					%th Month
					%th Credits Sold
					%th Credits Bought
			%tbody
				%tr.odd.gradeX
					%td May
					%td 23.835
					%td 90.234
				%tr.even.gradeC
					%td June
					%td 32.142
					%td 123.023
.row
.col-lg-12
	%h3 Latest transactions
	.table-responsive
		%table#dataTables-example.table.table-basic.table-bordered.table-hover.mt20
			%thead
				%tr
					%th Transaction ID
					%th Transaction code
					%th Transaction amount
					%th Transaction date
			%tbody
				- @kiosk.transactions.each do |t|
					%tr	
						%td= t.id 
						%td= t.transaction_code
						%td= t.amount
						%td= t.transaction_time
.row
:javascript
	$(document).ready(function() {
			$('#dataTables-example').dataTable();
	});